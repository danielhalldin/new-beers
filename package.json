{
  "name": "new-beers",
  "version": "0.1.85",
  "private": true,
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build && npm run build-service-worker",
    "build-service-worker": "node scripts/build_workbox && node scripts/inject_version_to_sw && node scripts/delete_default_sw",
    "test": "react-scripts test --env=jsdom",
    "lint": "eslint src --max-warnings 0",
    "eject": "react-scripts eject",
    "codegen": "DEBUG=1 graphql-codegen -r dotenv/config"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run lint && npm version patch"
    }
  },
  "lint-staged": {
    "*.{js,json,css,md}": [
      "prettier --write"
    ]
  },
  "eslintConfig": {
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module"
    },
    "env": {
      "node": true,
      "es6": true,
      "jest": true,
      "browser": true
    },
    "rules": {
      "no-console": 0,
      "no-unused-vars": 1,
      "react/prop-types": 0,
      "no-restricted-imports": [
        "error",
        {
          "paths": [
            {
              "name": "styled-components",
              "message": "Please import from styled-components/macro."
            }
          ],
          "patterns": [
            "!styled-components/macro"
          ]
        }
      ]
    }
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "dependencies": {
    "@apollo/client": "3.2.1",
    "graphql": "15.3.0",
    "lodash": "4.17.20",
    "react": "16.13.1",
    "react-device-detect": "1.13.1",
    "react-dom": "16.13.1",
    "react-fastclick-alt": "2.0.1",
    "react-image": "4.0.3",
    "react-router-dom": "5.2.0",
    "react-scripts": "3.4.3",
    "react-use": "15.3.4",
    "styled-components": "5.2.0"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "1.17.9",
    "@graphql-codegen/fragment-matcher": "1.17.8",
    "@graphql-codegen/typescript-document-nodes": "1.17.8",
    "@graphql-codegen/typescript-operations": "1.17.8",
    "@graphql-codegen/typescript-react-apollo": "1.17.7",
    "@graphql-codegen/typescript-resolvers": "1.17.10",
    "@graphql-codegen/typescript": "1.17.10",
    "@types/jest": "25.2.3",
    "@types/lodash": "4.14.161",
    "@types/node": "13.13.21",
    "@types/react-dom": "16.9.8",
    "@types/react-router-dom": "5.1.5",
    "@types/react": "16.9.49",
    "@types/styled-components": "5.1.3",
    "babel-plugin-styled-components": "1.11.1",
    "eslint-plugin-react": "7.21.2",
    "eslint": "6.8.0",
    "husky": "4.3.0",
    "lint-staged": "10.4.0",
    "prettier": "2.1.2",
    "typescript": "3.9.7",
    "workbox-build": "5.1.4"
  }
}
